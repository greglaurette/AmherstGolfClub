@model IEnumerable<AmherstGolfClub.Models.Product>

@{
    ViewBag.Title = "ProShop";
}

<h2>ProShop</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubDepartment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemCategory)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubDepartment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCategory)
        </td>        
    </tr>
}

</table>
